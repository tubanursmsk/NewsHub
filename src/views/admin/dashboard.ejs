<div class="row">
    <div class="col-md-2 border-end pe-2">
        <%- include('../partials/_sidebar') %> 
    </div>
    <div class="col-md-10 ps-3">
        <h1 class="mb-4">Admin Paneli</h1>
        <hr />

        <h2 class="mt-5">Kullanıcılar (<%= users.length %>)</h2>
        <div class="table-responsive">
            <table class="table table-striped table-hover table-sm align-middle">
                <thead>
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Rol</th>
                        <th>Kayıt Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    <%# ***** DÖNGÜ DÜZELTİLDİ: 'users' dizisini kullanıyoruz ***** %>
                    <% users.forEach(user => { %> 
                        <tr>
                            <%# ***** VERİLER DÜZELTİLDİ: 'user' özelliklerini kullanıyoruz ***** %>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td>
                                <% if (user.role === 'Admin') { %>
                                    <span class="badge bg-danger"><%= user.role %></span>
                                <% } else { %>
                                    <span class="badge bg-secondary"><%= user.role %></span>
                                <% } %>
                            </td>
                            <td><%= new Date(user.createdAt).toLocaleDateString('tr-TR') %></td>
                            <td>
                                <%# ***** FORM DÜZELTİLDİ: Kullanıcı silme rotasını ve ID'sini kullanıyoruz ***** %>
                                <% const isCurrentUser = (locals.user && locals.user.id === user._id.toString()); %>
                                <form action="/admin/users/<%= user._id %>/delete" 
                                      method="news" 
                                      class="d-inline" 
                                      onsubmit="return confirm('<%= user.name %> adlı kullanıcıyı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!');">
                                    <button type="submit" 
                                            class="btn btn-sm btn-outline-danger"
                                            <%- isCurrentUser ? 'disabled' : '' %> >
                                        Sil
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <h2 class="mt-5">Yazılar (<%= news.length %>)</h2>
        <div class="table-responsive">
            <table class="table table-striped table-hover table-sm align-middle">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Yazar</th>
                        <th>Kategori</th>
                        <th>Yayın Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    <%# ***** DÖNGÜ DOĞRU: 'news' dizisini kullanıyoruz ***** %>
                    <% news.forEach(news => { %>
                        <tr>
                            <%# ***** VERİLER DOĞRU: 'news' özelliklerini kullanıyoruz ***** %>
                            <td>
                                <a href="/news/<%= news._id %>" target="_blank"><%= news.title %></a>
                            </td>
                            <td>
                                <%= news.author ? news.author.name : 'Silinmiş Kullanıcı' %>
                            </td>
                            <td><%= news.category %></td>
                            <td><%= new Date(news.createdAt).toLocaleDateString('tr-TR') %></td>
                            <td>
                                <%# ***** FORM DÜZELTİLDİ: news silme rotasını ve ID'sini kullanıyoruz ***** %>
                                <form action="/admin/news/<%= news._id %>/delete" 
                                      method="news" 
                                      class="d-inline" 
                                      onsubmit="return confirm('<%= news.title %> başlıklı yazıyı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        Sil
                                    </button>
                                </form>
                                </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

    </div> </div> 