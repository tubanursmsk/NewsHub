<div class="row justify-content-center">
    <div class="col-md-8">
        
        <h1 class="news-title display-5 mb-3"><%= news.title %></h1>

        <div class="d-flex align-items-center text-muted mb-4">
            <div>
                <strong><%= news.author ? news.author.name : 'Bilinmeyen Yazar' %></strong> <br>
                <small>
                    <%= new Date(news.createdAt).toLocaleDateString('tr-TR', { day: 'numeric', month: 'long', year: 'numeric' }) %>
                    <% if (news.category && news.category !== 'Diğer') { %> 
                        <span class="badge bg-secondary ms-1"><%= news.category %></span> 
                    <% } %>
                </small>
            </div>
            
            <% if (user && news.author && user.id == news.author._id.toString()) { %>
                <div class="ms-auto d-flex gap-2">
                    <a href="/news/<%= news._id %>/edit" class="btn btn-sm btn-outline-secondary">Düzenle</a>
                    <form action="/news/<%= news._id %>/delete" method="news" class="d-inline" onsubmit="return confirm('Bu yazıyı silmek istediğinizden emin misiniz?');">
                        <button type="submit" class="btn btn-sm btn-outline-danger">Sil</button>
                    </form>
                </div>
            <% } %>
        </div>

        <% if (news.imageUrl) { %>
            <img src="/uploads/<%= news.imageUrl %>" class="img-fluid rounded mb-4 shadow-sm" alt="<%= news.title %>">
        <% } %>

        <div class="news-content fs-5 mb-5"> <%# fs-5 ile fontu biraz büyüttük %>
            <%- news.content %> 
        </div>

        <hr class="my-5">
<h3 class="mb-4">Yorumlar (<%= comments.length %>)</h3>

        <% if (user && user.id) { %>
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Yorum Yap</h5>

                    <% if (typeof commentErrors !== 'undefined' && commentErrors.length > 0) { %>
                        <div class="alert alert-danger pb-0 mb-3">
                            <ul>
                                <% commentErrors.forEach(error => { %>
                                    <li><%= error.msg %></li>
                                <% }) %>
                            </ul>
                        </div>
                    <% } %>
                    <form action="/news/<%= news._id %>/comment" method="news">
                        <div class="mb-3">
                            <textarea class="form-control <%= (typeof commentErrors !== 'undefined' && commentErrors.length > 0) ? 'is-invalid' : '' %>" <%# Hata Class'ı %>
                                      name="text" 
                                      rows="3" 
                                      placeholder="Yorumunuzu buraya yazın..." 
                                      required><%= typeof oldCommentInput !== 'undefined' ? oldCommentInput : '' %></textarea> <%# Eski Girdi %>
                        </div>
                        <button type="submit" class="btn btn-primary">Gönder</button>
                    </form>
                </div>
            </div>
        <% } else { %>
            <%# Giriş yapma mesajı %>
            <p class="text-muted mb-4">Yorum yapmak için <a href="/login">giriş yapmanız</a> gerekmektedir.</p>
        <% } %>

        <% if (comments.length > 0) { %>
            <% comments.forEach(comment => { %>
                <div class="card card-body mb-3 bg-light border-0">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <strong><%= comment.author ? comment.author.name : 'Bilinmeyen Kullanıcı' %></strong>
                            <p class="mt-1 mb-0"><%= comment.text %></p>
                        </div>
                        <div class="d-flex flex-column align-items-end flex-shrink-0 ms-3">
                            <small class="text-muted text-nowrap"><%= new Date(comment.createdAt).toLocaleString('tr-TR', { day: 'numeric', month: 'short', hour: '2-digit', minute:'2-digit' }) %></small>
                            
                            <% 
                                const isnewsOwner = user && news.author && user.id === news.author._id.toString();
                                const isAdmin = user && user.role === 'Admin';
                            %>
                            <% if (isnewsOwner || isAdmin) { %>
                                <form class="mt-2" action="/news/<%= news._id %>/comment/<%= comment._id %>/delete" method="news" onsubmit="return confirm('Bu yorumu silmek istediğinizden emin misiniz?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger py-0 px-1 border-0">
                                        <i class="bi bi-trash"></i> Sil
                                    </button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <% if (user && user.id) { %> <%# Giriş yapmışsa farklı mesaj %>
              <p class="text-muted">Henüz hiç yorum yapılmamış. İlk yorumu siz yapın!</p>
            <% } else { %> <%# Giriş yapmamışsa farklı mesaj %>
              <p class="text-muted">Henüz hiç yorum yapılmamış.</p>
            <% } %>
        <% } %>

    </div> </div> ```



