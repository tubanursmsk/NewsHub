<div class="row justify-content-center">
    <div class="col-md-8">
        <h1 class="mb-4">Yazıyı Düzenle</h1>
        <a href="/posts/<%= post._id %>">Yazıya Geri Dön</a> | 
        <a href="/dashboard">Panelime Dön</a>
        <hr>

        <%# Validasyon Hataları %>
        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
            <div class="alert alert-danger pb-0">
                <ul> <% errors.forEach(error => { %> <li><%= error.msg %></li> <% }) %> </ul>
            </div>
        <% } %> 
        <%# Genel Hata %> 
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>
        
        <form action="/posts/<%= post._id %>/update" method="POST" enctype="multipart/form-data">
            
            <%# Başlık %>
            <div class="mb-3">
                <label for="title" class="form-label">Başlık:</label>
                <input type="text" 
                       class="form-control <%= (typeof errors !== 'undefined' && errors.find(e => e.path === 'title')) ? 'is-invalid' : '' %>"
                       id="title" 
                       name="title" 
                       value="<%= typeof oldInput !== 'undefined' ? oldInput.title : post.title %>" <%# Hata varsa eski girdi, yoksa mevcut başlık %>
                       required>
            </div>

            <%# Resim %>
            <div class="mb-3">
                <label for="postImage" class="form-label">Yazı Görseli (Değiştirmek için yenisini seçin):</label>
                <% if (post.imageUrl) { %>
                    <div class="mb-2">
                        <img src="/uploads/<%= post.imageUrl %>" alt="Mevcut Resim" style="max-height: 150px;" class="img-thumbnail">
                        <small class="d-block text-muted">Mevcut Resim</small>
                    </div>
                <% } %>
                <input class="form-control" 
                       type="file" 
                       id="postImage" 
                       name="postImage" 
                       accept="image/png, image/jpeg, image/jpg, image/gif, image/webp"> 
            </div>

            <%# Kategori %>
            <div class="mb-3">
                <label for="category" class="form-label">Kategori:</label>
                <select class="form-select <%= (typeof errors !== 'undefined' && errors.find(e => e.path === 'category')) ? 'is-invalid' : '' %>" 
                        id="category" name="category" required>
                    <option disabled value="">Kategori Seçiniz...</option>
                    <% categories.forEach(cat => { %>
                        <%# Hata varsa eski seçimi, yoksa mevcut kategoriyi seçili yap %>
                        <option value="<%= cat %>" <%= (typeof oldInput !== 'undefined' ? oldInput.category : post.category) === cat ? 'selected' : '' %>><%= cat %></option> 
                    <% }) %>
                </select>
            </div>
            
            <%# İçerik %>
            <div class="mb-3">
                <label for="content" class="form-label">İçerik:</label>
                <textarea class="form-control <%= (typeof errors !== 'undefined' && errors.find(e => e.path === 'content')) ? 'is-invalid' : '' %>" 
                          id="content" 
                          name="content" 
                          rows="15" 
                          required><%= typeof oldInput !== 'undefined' ? oldInput.content : post.content %></textarea> <%# Hata varsa eski girdi, yoksa mevcut içerik %>
            </div>
            
            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a href="/posts/<%= post._id %>" class="btn btn-secondary ms-2">İptal</a>
        </form>
    </div>
</div>