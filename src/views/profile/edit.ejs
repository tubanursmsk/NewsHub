<div class="row">
    <div class="col-md-3">
        <%- include('../partials/_sidebar') %> 
    </div>
    <div class="col-md-9">
        <h1>Profili Düzenle</h1>
        <hr>

        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
            <div class="alert alert-danger pb-0">
                <ul> <% errors.forEach(error => { %> <li><%= error.msg %></li> <% }) %> </ul>
            </div>
        <% } %>
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <div class="card">
            <div class="card-body">
                <form action="/profile/edit" method="POST">
                    <div class="mb-3">
                        <label for="name" class="form-label">Ad Soyad:</label>
                        <input type="text" 
                               class="form-control" 
                               id="name" 
                               name="name" 
                               value="<%= typeof oldInput !== 'undefined' ? oldInput.name : userData.name %>" 
                               required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Adresi:</label>
                        <input type="email" 
                               class="form-control" 
                               id="email" 
                               name="email" 
                               value="<%= typeof oldInput !== 'undefined' ? oldInput.email : userData.email %>" 
                               required>
                    </div>

                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a href="/profile" class="btn btn-secondary ms-2">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>